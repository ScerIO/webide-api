{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "lib": [
      "es5",
      "es6",
      "esnext"
    ],
    "removeComments": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./build/",
    "baseUrl": "./",
    "paths": {
      "*": [
        "./src/*"
      ]
    }
  }
}
